{% extends 'base.html.twig' %} {% block title %}Hello ContactsController!{%
endblock %} {% block body %} {% for message in app.flashes('success') %}
<div class="alert alert-success" role="alert">
  {{ message }}
</div>
{% endfor %}

<div class="row">
  <h2 class="pt-4">All Contacts!</h2>

  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Phone</th>
        <th scope="col">Email</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {% set i = 1 %} {% for contact in contacts %}
      <tr>
        <th scope="row">{{ i }}</th>
        <td>{{ contact.name }}</td>
        <td>{{ contact.phone }}</td>
        <td>{{ contact.email }}</td>
        <td>
          <a href="{{ path('edit', { id: contact.id }) }}">Edit</a> &nbsp; |
          &nbsp;
          <a href="{{ path('remove', { id: contact.id }) }}">Delete</a>
        </td>
      </tr>
      {% set i = i + 1 %} {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
